{
  "name": "custom-tailor-backend",
  "version": "1.0.0",
  "private": true,
  "description": "Custom Tailor Backend System - NestJS + Prisma + PostgreSQL",
  "scripts": {
    "build": "nest build",
    "email:dev": "npx @react-email/preview-server --dir=emails --port=3000",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:prod": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "prisma:seed": "ts-node prisma/seed.ts",
    "start": "node dist/main",
    "start:debug": "nest start --debug --watch",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/main",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.956.0",
    "@aws-sdk/s3-request-presigner": "^3.956.0",
    "@nestjs/common": "^11.0.0",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.0",
    "@nestjs/platform-express": "^11.0.0",
    "@nestjs/serve-static": "^5.0.4",
    "@nestjs/swagger": "^11.0.0",
    "@prisma/client": "^6.0.0",
    "@react-email/components": "^1.0.0",
    "@react-email/render": "latest",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "decimal.js": "^10.4.3",
    "express": "^4.18.2",
    "multer": "1.4.5-lts.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-email": "latest",
    "redis": "^4.6.0",
    "reflect-metadata": "^0.2.0",
    "resend": "latest",
    "rxjs": "^7.8.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.0",
    "@react-email/preview-server": "5.0.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.7",
    "@types/multer": "^1.4.11",
    "@types/node": "^22",
    "@types/passport-jwt": "^4.0.0",
    "@types/react": "^19.2.3",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "prisma": "^6.0.0",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.0"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
